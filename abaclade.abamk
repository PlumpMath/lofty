   brief="Abaclade Make makefile for Abaclade itself."
>
   <dynlib
      name="abaclade"
      brief="Main Abaclade dynamic shared library."
   >
      <source path="src/abaclade/abaclade.cxx"/>
      <source path="src/abaclade/app.cxx"/>
      <source path="src/abaclade/bitmanip.cxx"/>
      <source path="src/abaclade/byteorder.cxx"/>
