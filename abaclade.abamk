      <dynlib name="abaclade"/>
   </exe>

   <exe
      name="http-server"
      brief="Example: basic HTTP server implemented using coroutines."
   >
      <source path="examples/http-server.cxx"/>
      <dynlib name="abaclade"/>
   </exe>

   <exe
      name="maps-comparison"
      brief="Comparison of map implementations."
   >
      <source path="examples/maps-comparison.cxx"/>
      <dynlib name="abaclade"/>
   </exe>
