   </dynlib>

   <dynlib
      name="abaclade-testing"
      brief="Testing support library."
   >
      <source path="src/abaclade-testing/app.cxx"/>
      <source path="src/abaclade-testing/runner.cxx"/>
      <source path="src/abaclade-testing/test_case.cxx"/>
      <source path="src/abaclade-testing/utility.cxx"/>
      <dynlib name="abaclade"/>
   </dynlib>

   <exe
      name="hello-world"
      brief="Example: “Hello World”."
   >
      <source path="examples/hello-world.cxx"/>
      <dynlib name="abaclade"/>
   </exe>

   <exe
      name="cat"
      brief="Example: “cat” utility."
   >
      <source path="examples/cat.cxx"/>
      <dynlib name="abaclade"/>
   </exe>

   <exe
      name="exceptions"
      brief="Example: exceptions and stack traces."
   >
      <source path="examples/exceptions.cxx"/>
      <dynlib name="abaclade"/>
   </exe>

   <exe
      name="coroutines"
      brief="Example: using coroutines."
   >
      <source path="examples/coroutines.cxx"/>
      <dynlib name="abaclade"/>
   </exe>

   <exe
      name="echo-server"
      brief="Example: TCP “echo” server implemented using coroutines."
