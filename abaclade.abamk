      <source path="src/abaclade/collections/detail/trie_ordered_multimap_impl.cxx"/>
      <source path="src/abaclade/collections/detail/vextr_impl.cxx"/>
      <source path="src/abaclade/collections/detail/xor_list.cxx"/>
      <source path="src/abaclade/collections/vector.cxx"/>
      <source path="src/abaclade/coroutine.cxx"/>
