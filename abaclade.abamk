      <source path="src/abaclade/thread.cxx"/>
      <source path="src/abaclade/thread_local.cxx"/>
      <source path="src/abaclade/to_str.cxx"/>

      <exeunittest
         name="abaclade-test"
         brief="Main unit test for Abaclade."
      >
         <source path="test/abaclade/abaclade-test.cxx"/>
         <source path="test/abaclade/collections/hash_map.cxx"/>
         <source path="test/abaclade/collections/list.cxx"/>
         <source path="test/abaclade/collections/queue.cxx"/>
         <source path="test/abaclade/collections/static_list.cxx"/>
         <source path="test/abaclade/collections/trie_ordered_multimap.cxx"/>
         <source path="test/abaclade/collections/vector.cxx"/>
