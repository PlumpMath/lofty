         <source path="test/abaclade/coroutine_local.cxx"/>
         <source path="test/abaclade/defer_to_scope_end.cxx"/>
         <source path="test/abaclade/enum.cxx"/>
         <source path="test/abaclade/exception.cxx"/>
         <source path="test/abaclade/io/binary/pipe.cxx"/>
         <source path="test/abaclade/io/text/binbuf_reader-read.cxx"/>
         <source path="test/abaclade/io/text/writer-print.cxx"/>
         <source path="test/abaclade/os/path.cxx"/>
         <source path="test/abaclade/range.cxx"/>
         <source path="test/abaclade/text/char_ptr_to_str_adapter.cxx"/>
         <source path="test/abaclade/text/str.cxx"/>
         <source path="test/abaclade/text/str_traits.cxx"/>
         <source path="test/abaclade/thread.cxx"/>
         <source path="test/abaclade/thread_local.cxx"/>
         <source path="test/abaclade/to_str.cxx"/>
         <dynlib name="abaclade-testing"/>
      </exeunittest>

      <toolunittest
         name="abaclade-cppmacros-test"
         brief="Unit test for Abaclade’s preprocessor macros."
      >
         <output-transform filter="ABCMK_CMP_BEGIN.*?ABCMK_CMP_END"/>
         <source tool="preproc" path="test/abaclade-cppmacros/cppmacros.cxx"/>
         <expected-output path="test/abaclade-cppmacros/cppmacros.cxx.i"/>
      </toolunittest>

